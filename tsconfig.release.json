{
  "compilerOptions": {
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "sourceMap": false,
    "declaration": true,
    "outDir": "dist",
    "removeComments": false
  },
  "files": [
    "src/index.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**.spec.ts"
  ]
}
